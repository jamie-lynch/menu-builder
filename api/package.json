{
  "name": "menu-builder",
  "version": "1.0.0",
  "description": "Menu Builder is an app for putting together menus and generating shopping lists",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "build": "tsc",
    "start": "ts-node-dev ./src/index.ts",
    "test": "jest --watchAll",
    "test:ci": "jest --ci",
    "test:coverage": "env-cmd -f ./.env.test && jest --coverage"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/swagger-ui-express": "^4.1.2",
    "express": "^4.17.1",
    "http": "^0.0.1-security",
    "http-errors": "^1.8.0",
    "mysql": "^2.18.1",
    "pino": "^6.5.1",
    "pino-http": "^5.2.0",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/faker": "^4.1.12",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/pino-http": "^5.0.5",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^3.0.2",
    "dotenv": "^8.2.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.7.0",
    "faker": "^5.1.0",
    "husky": "^4.2.5",
    "jest": "^26.4.1",
    "pino-pretty": "^4.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.61",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test:ci",
      "pre-push": "yarn lint && yarn test:ci"
    }
  }
}
